      "sockets": [],
      "allowedSockets": [],
      "influence": { "radius": 0.1 },

      "scene": {
        // only stuff that overrides the defaults
      }
    },

    "bunny_mask": {
      "objClass": "accessory",
      "modelPath": "/assets/objects/bunny_mask/bunny_mask.glb",
      "size": 0.8,
      "sizeRank": 2,

      // child sockets on the bunny mask (ears / top, etc.)
      "sockets": [
        { "id": 0, "node": "socket_c_0" },
        { "id": 1, "node": "socket_c_1" }
      ],

      // empty = can attach to any socket on a larger host
      "allowedSockets": [],
      "influence": { "radius": 0.12 }
    },

    human_mask: {
